lnodebtc.duckdns.org {
    # Dashboard lives at /ibit â€” the root path is free for other services
    handle /ibit* {
        basicauth {
            # Replace <HASH> with output of: caddy hash-password --plaintext 'YourPassword'
            pi <HASH>
        }

        reverse_proxy 127.0.0.1:8501

        # Security headers
        header {
            X-Content-Type-Options nosniff
            X-Frame-Options DENY
            Referrer-Policy strict-origin-when-cross-origin
        }
    }

    log {
        output file /var/log/caddy/btc-predict.log
        format console
    }
}
